{
  "name": "ha-mongo-client",
  "version": "1.1.0",
  "description": "High availaility for MongoClient",
  "main": "dist/ha_mongo_client.js",
  "scripts": {
    "test": "./node_modules/.bin/ava",
    "lint": "./node_modules/.bin/prelint",
    "build": "./node_modules/.bin/babel ./src --out-dir ./dist",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:antipin/ha-mongo-client.git"
  },
  "author": "Alexander I. Antipin",
  "license": "MIT",
  "peerDependencies": {
    "mongodb": ">=2.1"
  },
  "devDependencies": {
    "ava": "0.22.0",
    "babel-cli": "6.26.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-es2015": "6.24.1",
    "eslint-config-labs42": "2.2.1",
    "eslint-plugin-ava": "4.2.1",
    "eslint-plugin-import": "2.7.0",
    "mongodb-topology-manager": "1.0.13", 
    "pre-commit": "1.2.2",
    "prelint": "1.2.0"
  },
  "engines": {
    "node": ">=5.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "ava": {
    "failFast": false,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  }
}
