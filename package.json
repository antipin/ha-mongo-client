{
  "name": "ha-mongo-client",
  "version": "1.0.0",
  "description": "Wrapper around native MongoClient that allows to retry connection to MongoDB on application startup",
  "main": "dist/ha_mongo_client.js",
  "scripts": {
    "test": "./node_modules/.bin/ava",
    "build": "./node_modules/.bin/babel ./src --out-dir ./dist",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:antipin/ha-mongo-client.git"
  },
  "author": "Alexander I. Antipin",
  "license": "MIT",
  "dependencies": {
    "mongodb": "^2.1.14"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "mongodb-topology-manager": "^1.0.6"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "ava": {
    "failFast": false,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  }
}
